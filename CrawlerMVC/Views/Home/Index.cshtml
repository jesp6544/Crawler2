<script type="text/javascript">

    var params = {};
    window.location.search
        .replace(/[?&]+([^=&]+)=([^&]*)/gi, function (str, key, value) {
            params[key] = value;
        }
    );

    var searching = false;

    var $searchForm = $("#searchForm");
    var $searchField = $("#searchQuery");

    var $loadingOverlay = $("#loadingOverlay");
    var $searchResults = $("#searchResults");
    var $searchBar = $("#searchBar");

    function doSearch(query) {
        searching = true;
        //$loadingOverlay.toggleClass("hidden");

        //$loadingOverlay.fadeIn(500).delay();
        $searchResults.html("Loading...");
        $searchBar.removeClass("vertical-align");

        $.ajax({
            method: "GET",
            //url: "/Dummy.json",
            url: "/api/search/" + query
            //,data: { query: query }
        }).done(function (data) {

            $root = $(document.createElement("div"))
                .addClass("container");

            $.each(data, function (i, field) {

                $root.append(
                    $(document.createElement("div")).append(
                        $(document.createElement("a"))
                            .text(field.Title)
                            .attr("href", field.URL)
                    ).append(
                        $(document.createElement("p"))
                            .html(field.Text)
                    )
                );
            });

            $searchResults.html($root);

            //var JSONobj = $.parseJSON(data);
        }).fail(function (jqXHR, status, error) {

        }).always(function () {

            //$loadingOverlay.fadeOut(500);
            searching = false;
        });
    }

    $(window).load(function () {

        var query = params["q"];

        if (query.length > 0) {
            doSearch(query);
        }
    });

    $searchForm.submit(function (e) {

        console.log("Form submitted.");

        var query = $searchField.val();

        if (query.length > 0 && !searching) {
            history.pushState({}, "Results for \"" + query + "\"", "?q=" + query);
            doSearch(query);
        }

        e.preventDefault();
        return false;
    });
</script>

